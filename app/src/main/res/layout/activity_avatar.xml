<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvatarActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/senegal">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/iconavatar"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        />

    <EditText
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:hint="+221XXXXXXXX"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        android:fontFamily="@font/caviardreams"
        android:inputType="number"
        android:id="@+id/password"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suivant"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/caviardreamsbold"
        android:background="@drawable/customizebutton"
        android:id="@+id/btn"
        android:onClick="suivant"/>

</LinearLayout>